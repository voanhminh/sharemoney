{
	"name": "social-media-networking",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"start": "yarn start:frontend",
		"start0": "concurrently --kill-others \"yarn start:backend\" \"yarn start:frontend\"",
		"start:backend": "yarn workspace social-media-network-backend start",
		"start:frontend": "yarn workspace social-media-network-frontend start",
		"install:backend": "cd backend && npm install",
		"install:frontend": "cd frontend && npm install",
		"preinstall": "yarn install:backend && yarn install:frontend",
		"test": "echo \"Error: no test specified\" && exit 1"
	},
	"workspaces": {
		"packages": [
			"backend",
			"frontend"
		],
		"nohoist": [
			"**/react-native",
			"**/react-native/**",
			"**/react-scripts",
			"**/react-scripts/**",
			"**/expo",
			"**/expo/**"
		]
	},
	"devDependencies": {
		"concurrently": "^5.0.1"
	},
	"author": "CM",
	"license": "ISC"
}